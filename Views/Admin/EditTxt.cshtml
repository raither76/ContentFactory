@using ContentFactory.ViewModels
@{
    ViewData["Title"] = "Редактировать записи";
    Layout = "_Admin";
}
@model List<Txt>

<div class="alert alert-success alert-dismissible fade show" role="alert">
        <div class="callout callout-info">
            <strong>Редактировать записи к фото:</strong><br>
            <a>В данном разделе выможете редактировать записи к вото на странице добавления товара.</a><br>
        </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">  
      </button>
</div>
<div class="child-content">
     <div class="col-md-6">
        <form id="EditTxtForm" asp-action="EditTxt" method="post">
            <h2>Редактировать</h2>
            <hr />
            @{
                for (int i = 0; i < 5; i++)
                {
                    <div class="form-floating">
                        <input asp-for="@Model[i].Id" class="form-control" autocomplete="on" aria-required="true" hidden="hidden" />
                        <input asp-for="@Model[i].Name" class="form-control" autocomplete="on" aria-required="true" />
                        <label asp-for="@Model[i].Name"></label>
                        <span asp-validation-for="@Model[i].Name" class="text-danger"></span>
                    </div>
                }

             }
            <button id="Submit" type="submit" class="w-100 btn btn-lg btn-primary">Сохранить</button>
        </form>
    </div>
</div>

