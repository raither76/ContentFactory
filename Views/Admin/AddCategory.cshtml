
@using ContentFactory.Models
@{
    ViewData["Title"] = "Добавить категорию";
    Layout = "_Admin";
}
@model Category

<div class="alert alert-success alert-dismissible fade show" role="alert">
        <div class="callout callout-info">
            <strong>Добавление группу категорий:</strong><br>
            <a>В данном разделе выможете добавить группу категорий.</a><br>
        </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">  
      </button>
</div>

<div class="child-content">
     <div class="col-md-6">
        <form id="AddCategoryForm" asp-action="AddCategory" method="post">
            <h2>Группа категорий товаров</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Id" class="form-control" autocomplete="ID" aria-required="true" hidden="hidden"  id="Id"/>
                <label asp-for="Id"></label>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Name" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
          
            <button id="AddCategorySubmit" type="submit" class="w-100 btn btn-lg btn-primary">Сохранить</button>
        </form>
    </div>
</div>